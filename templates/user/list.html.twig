{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block header_title %}<h1>Liste des utilisateurs</h1>{% endblock %}

{% block body %}
{% if users|length == 0 %}
<div class="alert alert-warning" role="alert">
    Il n'y a pas encore d'utilisateur enregistré. <a href="{{ path('user_create') }}"
        class="btn btn-warning pull-right">Créer un utilisateur</a>
</div>
{% else %}
<div class="containerUser">
    <div class="containerTable">
        <div class="containerHeaderTable">
                <p>#</p>
                <p>Nom d'utilisateur</p>
                <p>Adresse d'utilisateur</p>
                <p>Actions</p>
        </div>
        <div class="containerInfos">
            {% for user in users %}
                <div class="info">
                    <p scope="row">{{ loop.index }}</p>
                    <p>{{ user.username }}</p>
                    <p>{{ user.email }}</p>
                    <p>
                        <a href="{{ path('user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">Edit</a>
                    </p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
